<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JMR Brochure</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr") @*modernizr can intercept unsupported browser features and then you can work around them*@

</head>
<body>
    @*@if (Request.IsAuthenticated)
        {

        }*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Joe's MVC ASP.NET 'Brochure' Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
