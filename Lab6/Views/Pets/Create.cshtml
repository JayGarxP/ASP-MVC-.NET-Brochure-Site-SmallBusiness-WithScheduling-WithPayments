@model Lab6.Models.Pet

@{
    ViewBag.Title = "Create";
}
<script src="../Scripts/petClicker.js" async></script>
<script>
    clickPet(speciesID);
</script>

<h2>Buy Loving Pets!</h2>
<table style="width:100%">
    <tr>
        <th id="kindness">Kindness!</th>
        <th id="health">Health!</th>
        <th id="success">Success!</th>
    </tr>
    <tr>
        <th>
            <img onclick="clickPet(0)" src="../Content/images/kindness.jpg" />
        </th>
        <th>
            <img onclick="clickPet(1)" src="../Content/images/health.jpg" />
        </th>
        <th>
            <img onclick="clickPet(2)" src="../Content/images/success.jpg" />
        </th>
    </tr>

</table>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="row">
                    @Html.LabelFor(model => model.NickName, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-6"><b>User : Cash</b></div>
                </div>
            <div class="row">
                @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger" })
                <div class="col-md-offset-6">
                    @Html.DropDownList("UserCashDD")
                </div>
                @Html.Hidden("petClickedID", 0)
                @*<input type="hidden" value=0 id="petClickedID" />*@
            </div>

            </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*@Url.Action("ViewStockNext", "Inventory", new { firstItem = 11 });*@
                <input type="submit" value="Buy" class="btn btn-default" />
            </div>
        </div>
    </div>
}

